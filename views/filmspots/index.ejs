<% layout("layouts/boilerplate") %>
<div id='cluster-map'></div>
<h1>All Filmspots</h1>
<!-- <div>
    <a href="/filmspots/new">Add filmspot</a>
</div> -->

<% for (let spot of filmspots) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (spot.image.length) {%>
                    <img crossorigin="anonymous" class="img-fluid" alt="" src="<%=spot.image[0].url%>">
                    <% } else {%>
                        <img crossorigin="anonymous" class="img-fluid" alt=""
                            src="https://res.cloudinary.com/djlkciaid/image/upload/v1684357660/Filmology/no_image_nbrmcn.jpg">
                        <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= spot.title %>
                    </h5>
                    <p class="card-text">
                        <%= spot.location %>
                    </p>
                    <p class="card-text">
                        <small class="text-muted">
                            <%= spot.filmUsed %>
                        </small>
                    </p>
                    <a class="btn btn-primary" href="/filmspots/<%= spot._id %>">View</a>

                </div>
            </div>
        </div>
    </div>
    <% } %>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
        const filmspots = {features: <%- JSON.stringify(filmspots) %>}
    </script>

<script src="/js/clusterMap.js"></script>
