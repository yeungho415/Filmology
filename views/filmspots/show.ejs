<% layout("layouts/boilerplate") %>
    <div class="row">
        <div class="col-8">
            <div id="filmspotcarousel" class="carousel slide">
                <div class="carousel-inner">
                    <% filmspot.image.forEach((img, i) => {%>
                    <div class="carousel-item <%= i === 0 ? "active" : "" %>">
                        <img crossorigin="anonymous" src="<%= img.url %>" class="d-block w-100" alt="...">
                    </div>
                    <% }) %>
                </div>
                <% if (filmspot.image.length > 1) {%>
                <button class="carousel-control-prev" type="button" data-bs-target="#filmspotcarousel" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#filmspotcarousel" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
                <% } %>
              </div>

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= filmspot.title %>
                    </h5>
                    <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                        content.</p> -->
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= filmspot.location %>
                    </li>
                    <li class="list-group-item"> Posted by
                        <%= filmspot.author.username %>
                    </li>
                    <li class="list-group-item">
                        <%= filmspot.filmUsed %>
                    </li>
                    <li class="list-group-item">date</li>
                </ul>
                <% if (currUser && filmspot.author.equals(currUser._id)) {%>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/filmspots/<%=filmspot._id%>/edit">Edit</a>
                    <form class="d-inline" action="/filmspots/<%= filmspot._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <% } %>
                <div class="card-footer text-muted">
                    <a href="/filmspots">All fimspots</a>
                </div>
            </div>
        </div>


        <div class="col-4">
            <div id='map'></div>
            <% if (currUser) { %>
            <h2>Leave a Comment</h2>
            <form action="/filmspots/<%= filmspot._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input type="range" class="form-range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Comment</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">Great!</div>
                </div>
                <button class="btn btn-success">submit</button>
            </form>
            <% } %>
            <% for (let review of filmspot.reviews) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Rating: <%= review.rating %></h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">By <%= review.author.username %></h6>
                        <p class="card-text">Comment: <%= review.body %></p>
                        <% if (currUser && review.author.equals(currUser._id)) {%>
                        <form action="/filmspots/<%= filmspot._id %>/reviews/<%= review._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>


    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
        const filmspot = <%- JSON.stringify(filmspot) %>
    </script>
    
    <script src="/js/showPageMap.js"></script>